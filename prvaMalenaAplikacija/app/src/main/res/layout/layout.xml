<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Najzločestiji" />

    <!--NAJZLOCESTIJI IGRAC-->

    <TextView
        android:id="@+id/tv_worst_palyer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_find"
        android:padding="10dp"
        android:text="Najzločestiji igrač: " />

    <TextView
        android:id="@+id/tv_worst_player_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_find"
        android:layout_toEndOf="@id/tv_worst_palyer_label"
        android:padding="10dp"
        tools:text="dfgdreghrt" />

    <Button
        android:id="@+id/bPlayer"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_above="@+id/tv_worst_team_value"
        android:layout_alignParentRight="true"
        android:background="@drawable/policeman"
        android:padding="10dp"></Button>

    <!--NAJZLOČESTIJI TIM-->


    <TextView
        android:id="@+id/tv_worst_team_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_worst_palyer_label"
        android:padding="10dp"
        android:text="Tim s najviše zločestih: "

        />

    <TextView
        android:id="@+id/tv_worst_team_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_worst_player_value"
        android:layout_toEndOf="@+id/tv_worst_team_label"
        android:padding="10dp"
        tools:text="dfgdreghrt" />


    <!--NAJGORI ZLOČIN-->


    <TextView
        android:id="@+id/tv_worst_crime_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_worst_team_label"
        android:padding="10dp"
        android:text="Najčešći zločin: "

        />


    <TextView
        android:id="@+id/tv_worst_crime_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_worst_team_value"
        android:layout_toEndOf="@+id/tv_worst_crime_label"
        android:padding="10dp"
        tools:text="dfgdreghrt" />

    <Button
        android:id="@+id/bCrime"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_worst_team_value"
        android:background="@drawable/images"
        android:padding="10dp"></Button>

    <Button
        android:id="@+id/btn_third_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:text="ViewPager" />

    <Button
        android:id="@+id/btn_time_act1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_third_act"
        android:layout_alignBottom="@+id/btn_third_act"
        android:layout_toEndOf="@+id/btn_third_act"
        android:text="Time" />


</RelativeLayout>
